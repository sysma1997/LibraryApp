    <Window.Resources>
        <CollectionViewSource x:Key="libraryViewSource" />
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        
        <DataGrid x:Name="dgLibrary" AutoGenerateColumns="False"
                  EnableRowVirtualization="True" 
                  ItemsSource="{Binding Source={StaticResource libraryViewSource}}"
                  RowDetailsVisibilityMode="VisibleWhenSelected">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding id}"
                                    Header="Id" Width="SizeToHeader"
                                    IsReadOnly="True" />
                <DataGridTextColumn Binding="{Binding name}"
                                    Header="Name" Width="SizeToHeader" />
                <DataGridTextColumn Binding="{Binding author}"
                                    Header="Author" Width="SizeToHeader" />
                <DataGridTextColumn Binding="{Binding numPages}"
                                    Header="Number to pages" Width="SizeToHeader" />
                <DataGridTextColumn Binding="{Binding quantity}"
                                    Header="Quantity" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
        <Button Grid.Row="1" 
                Margin="0,10"
                Click="btnSave">Save</Button>
    </Grid>
</Window>
